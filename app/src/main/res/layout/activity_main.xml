<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="1">




    <EditText
        android:height="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_client"
        android:hint="Enter port number."
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:onClick="connect"
        android:id="@+id/button_connect"
        android:layout_below="@+id/message_client"
        android:layout_toRightOf="@+id/button_cancel"
        android:layout_toEndOf="@+id/button_cancel" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button_send"
        android:layout_below="@+id/message_client"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button_cancel"
        android:layout_below="@+id/message_client"
        android:layout_toRightOf="@+id/button_send"
        android:layout_toEndOf="@+id/button_send" />

</RelativeLayout>
